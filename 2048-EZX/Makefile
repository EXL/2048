####### Compiler, tools and options

CC       = arm-linux-gnu-gcc
CXX      = arm-linux-gnu-g++
STRIP    = arm-linux-gnu-strip
CFLAGS   = -pipe -Wall -W -O2 -mcpu=iwmmxt -mtune=iwmmxt -D_REENTRANT -DQT_THREAD_SUPPORT -DNO_DEBUG -DEZX_E6
CXXFLAGS = -pipe -DQWS -fno-exceptions -fno-rtti -Wall -W -O2 -mcpu=iwmmxt -mtune=iwmmxt -D_REENTRANT -DQT_THREAD_SUPPORT -DNO_DEBUG -DEZX_E6
INCPATH  = -I$(QTDIR)/include -I$(EZXDIR)/include -I../src
LINK     = arm-linux-gnu-g++
LFLAGS   = -Wl,-rpath-link,$(QTDIR)/lib,-rpath-link,$(EZXDIR)/lib
LIBS     = $(SUBLIBS) -L$(QTDIR)/lib -lqte-mt -L$(EZXDIR)/lib -L$(EZXDIR)/lib/ezx/lib -lezxappbase
MOC      = $(QTDIR)/bin/moc
UIC      = $(QTDIR)/bin/uic
TAR      = tar --numeric-owner --owner=2000 --group=233 -cvf
GZIP     = gzip -9f

####### Files

HEADERS   = ../src/2048.h
SOURCES   = ../src/2048.c 2048-EZX.cpp
OBJECTS   = 2048.o 2048-EZX.o
SRCMOC    = 2048-EZX.moc
OBJMOC    =
DIST_PKG  = 2048-EZX.pkg
DIST_MPKG = 2048-EZX.mpkg
APPDIR    = 2048_EZX
TARGET    = 2048-EZX

####### Build rules

all: $(TARGET)

$(TARGET): $(OBJECTS) $(OBJMOC)
	$(LINK) $(LFLAGS) -o $(TARGET) $(OBJECTS) $(OBJMOC) $(LIBS)
	$(STRIP) -s $(TARGET)

pkg: $(TARGET)
	-mkdir $(APPDIR)
	-cp 2048-EZX $(APPDIR)
	-cp pkg/2048_EZX.desktop $(APPDIR)
	-cp ../image/icon/ezx_sml_32x24.png $(APPDIR)
	-cp ../image/icon/ezx_big_68x43.png $(APPDIR)
	-cp ../image/icon/ezx_dia_50x50.png $(APPDIR)
	$(TAR) $(APPDIR).uncompressed $(APPDIR)
	$(GZIP) $(APPDIR).uncompressed
	-mv $(APPDIR).uncompressed.gz $(DIST_PKG)
	-cp $(DIST_PKG) $(DIST_MPKG)

moc: $(SRCMOC)

clean:
	-rm -f $(OBJECTS) $(OBJMOC) $(SRCMOC) $(TARGET)
	-rm -r -f $(APPDIR)
	-rm -f *~ $(DIST_PKG) $(DIST_MPKG) core

####### Compile

2048.o: ../src/2048.c ../src/2048.h
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

2048-EZX.o: 2048-EZX.cpp 2048-EZX.moc ../src/2048.h 
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

2048-EZX.moc: 2048-EZX.cpp
	$(MOC) 2048-EZX.cpp -o 2048-EZX.moc
