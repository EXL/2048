####### Files

HEADERS   = ../src/2048.h
SOURCES   = ../src/2048.c 2048-EZX.cpp
OBJECTS   = ../src/2048.o 2048-EZX.o
SRCMOC    = 2048-EZX.moc
OBJMOC    =
DIST_MPKG = 2048-EZX_E680.mpkg
