CC       = arm-linux-gcc
CXX      = arm-linux-g++
STRIP    = arm-linux-strip
CFLAGS   = -pipe -Wall -W -O2 -D_REENTRANT -DQT_THREAD_SUPPORT -DNO_DEBUG -DEZX_E680
CXXFLAGS = -pipe -DQWS -fno-exceptions -fno-rtti -Wall -W -O2 -D_REENTRANT -DQT_THREAD_SUPPORT -DNO_DEBUG -DEZX_E680
INCPATH  = -I../src -I$(QTDIR)/include/ezx -I$(QTDIR)/include/qt
LINK     = arm-linux-g++
LFLAGS   = -Wl,-rpath-link,$(QTDIR)/lib
LIBS     = $(SUBLIBS) -L$(QTDIR)/lib -lpthread -lqte-mt-xscale-r -lezxappbase-xscale-r -lezxappsdk-xscale-r -lezxjpeg-xscale-r -lezxtapi-xscale-r
MOC      = $(QTDIR)/bin/moc
UIC      = $(QTDIR)/bin/uic
